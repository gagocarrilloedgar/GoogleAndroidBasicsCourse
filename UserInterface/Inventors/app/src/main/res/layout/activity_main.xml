<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inventors an Entrepreneur Initiative "
        android:textAlignment="center"
        android:id="@+id/Title"
        android:background="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:padding="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Title"
        android:scaleType="centerCrop"
        android:src="@drawable/inventors"
        android:id="@+id/inventors"
        />

    <TextView
        android:id="@+id/colum1"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/inventors"
        android:layout_alignParentRight="true"
        android:background="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="Created by:"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/column2"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/inventors"
        android:background="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="Program based on:"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edgar Gago Carrillo"
        android:textAlignment="center"
        android:id="@+id/sign"
        android:background="@android:color/white"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/colum1"
        android:id="@+id/list1"
        android:textAlignment="center"
        android:text="路3D printing"
        android:padding="10dp"/>
    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/list1"
        android:id="@+id/list2"
        android:textAlignment="center"
        android:text="路Robotics"
        android:padding="10dp"/>
    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/list2"
        android:id="@+id/list3"
        android:textAlignment="center"
        android:text="路Programming"
        android:padding="10dp"/>
    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/list3"
        android:id="@+id/list4"
        android:textAlignment="center"
        android:text="路2D anf 3D deisgn"
        android:padding="10dp"/>

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/column2"
        android:id="@+id/name1"
        android:textAlignment="center"
        android:text=" Edgar Gago Carrillo"
        android:padding="10dp"/>

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/name1"
        android:id="@+id/name2"
        android:textAlignment="center"
        android:text=" Roger Palau"
        android:padding="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list4"
        android:text="With the colaboration of:"
        android:textStyle="italic"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"
        android:id="@+id/colaboration"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPC Empren"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@id/colaboration"/>




</RelativeLayout>