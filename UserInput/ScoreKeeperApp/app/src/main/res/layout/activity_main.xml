<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="18dp"
                android:padding="4dp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:background="@android:color/holo_blue_light"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="56dp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="85dp"
                android:padding="4dp"
                android:id="@+id/scoresTeamA"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal"
                android:background="@android:color/holo_blue_light"
                android:onClick="goalOneTeamA"
                android:layout_marginLeft="65dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="56dp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="85dp"
                android:padding="4dp"
                android:id="@+id/faultsTeamA"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faults"
                android:background="@android:color/holo_blue_light"
                android:onClick="noGoalOneTeamA"
                android:layout_marginLeft="65dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="18dp"
                android:padding="4dp"
                android:textAlignment="center"
                android:fontFamily="sans-serif-light"
                android:background="@android:color/holo_blue_light"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="56dp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="85dp"
                android:padding="4dp"
                android:id="@+id/scoresTeamB"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal"
                android:background="@android:color/holo_blue_light"
                android:onClick="goalOneTeamB"
                android:layout_marginLeft="65dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="56dp"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="85dp"
                android:padding="4dp"
                android:id="@+id/faultsTeamB"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faults"
                android:background="@android:color/holo_blue_light"
                android:onClick="noGoalOneTeamB"
                android:layout_marginLeft="65dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-light"
            android:text="Reset"
            android:textAllCaps="true"
            android:padding="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="165dp"
            android:onClick="resetButton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Designed By: Edgar Gago Carrillo"
            android:textSize="10sp"
            android:textAlignment="viewEnd"
            android:layout_gravity="end"
            android:padding="4dp"/>

    </LinearLayout>


</LinearLayout>